<body style="background-color:#F0F0F0;">

<div class="topnav">
  <a class="active" href="/cars">Home</a>
  <b><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></b>
</div>

<div class="container">
<div class="car-info">

<p>
  <h1><%= @car.nickname %></h1>
  </p>

<p>
  <strong>Make:</strong>
  <%= @car.make %>
</p>

<p>
  <strong>Model:</strong>
  <%= @car.model %>
</p>

<p>
  <strong>Year:</strong>
  <%= @car.year %>
</p>

<p>
  <strong>Sub Model:</strong>
  <%# <%= @car.sub_model %> 
</p>

<button><%= link_to 'Edit', edit_car_path(@car) %></button>
</div>

<div class="service-entries">

<h1>All Service Entries</h1>

<table class="my-cars">
  <tr>
    <th>Service</th>
    <th>Date</th>
    <th>Mileage</th>
    <th>Comments</th>
  </tr>

<% @car.service_entries.each do |service_entry| %>
<% if service_entry.persisted? %>
    <tr>
      <td><%= service_entry.service %></td>
      <td><%= service_entry.date %></td>
      <td><%= service_entry.mileage %></td>
      <td><%= service_entry.comments %></td>
      <td><button><%= link_to 'Edit', edit_car_service_entry_path(service_entry.car, service_entry) %></button></td>
      <td><button><%= link_to 'Destroy', [service_entry.car, service_entry], method: :delete, data: { confirm: 'Are you sure?' } %></button></td>

        


    </tr>
  <% end %>
<% end %>
</table>

<br />
</div>


<div class="new-entry">
<h1>New Service Entry</h1>

<%= render 'service_entries/form' %>
</div>
</div>
<button class="back-to-cars"><%= link_to 'Back to All Cars', cars_path %></button>

