<body style="background-color:#F0F0F0;">

<div class="topnav">
    <a class="active" href="/cars">Home</a>
  <b><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></b>

</div>

<h1 style="width:50%">Cars</h1>


<table class="my-cars">
  <thead>
      <th>Cars</th>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr class="cards">
        <td class= "user-label"><%= car.nickname %></td>

        <td><button><%= link_to 'Show', car %></button></td>
        <td><button><%= link_to 'Edit', edit_car_path(car) %></button></td>
        <td><button><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<p>
<button><%= link_to 'New Car', new_car_path %></button>
</p>







