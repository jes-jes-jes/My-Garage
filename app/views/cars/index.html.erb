<body style="background-color:#F0F0F0;">

<div class="topnav">
    <a class="active" href="/cars">Home</a>
  <b><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></b>
</div>


<div class= "grid-container">
<h1 class= "your-garage">Your Garage</h1>
<div class= "table">

<table class="my-cars" >

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td class= "user-label"> <%= link_to car.nickname, car %>
        <div class= "edit-delete"><%= link_to 'Edit', edit_car_path(car) %>
        <%= link_to 'Delete', car, method: :delete, data: { confirm: 'Are you sure?' } %></td></div>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<br>

</div>


<div class="new-car"><%= link_to 'New Car', new_car_path %></div>







